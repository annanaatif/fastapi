[Unit]
Description=fastapi application
After=network.target

[Service]
User=fastapi-annan
Group=fastapi-annan
WorkingDirectory=/home/fastapi-annan/app/src/
Environment="PATH=/home/fastapi-annan/app/venv/bin"
EnvironmentFile=/home/fastapi-annan/.env
ExecStart=/home/fastapi-annan/app/venv/bin/gunicorn -w 4 -k uvicorn.workers.UvicornWorker app.main:app --bind 0.0.0.0:8000

[Install]
WantedBy=multi-user.target